@page "/onboarding"

<PageTitle>Client Onboarding</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">Client Onboarding</h1>
            <p class="text-muted">Create a new wallet for crypto assets</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">New Client Information</h5>
                    
                    <form>
                        <div class="mb-3">
                            <label for="clientName" class="form-label">Client Name</label>
                            <input type="text" class="form-control" id="clientName" placeholder="Enter client's full name">
                        </div>

                        <div class="mb-3">
                            <label for="clientEmail" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="clientEmail" placeholder="client@example.com">
                        </div>

                        <div class="mb-3">
                            <label for="walletType" class="form-label">Wallet Type</label>
                            <select class="form-control" id="walletType">
                                <option value="">Select wallet type</option>
                                <option value="vault">Vault Account</option>
                                <option value="embedded">Embedded Wallet</option>
                                <option value="exchange">Exchange Account</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="initialAssets" class="form-label">Initial Assets</label>
                            <div class="row">
                                <div class="col-6">
                                    <select class="form-control" id="assetType">
                                        <option value="BTC">Bitcoin (BTC)</option>
                                        <option value="ETH">Ethereum (ETH)</option>
                                        <option value="USDC">USD Coin (USDC)</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control" id="assetAmount" placeholder="Amount">
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="notes" rows="3" placeholder="Additional notes about this client"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-primary btn-lg" @onclick="CreateWallet">
                                <span class="me-2">🚀</span>
                                Create Wallet
                            </button>
                        </div>
                    </form>

                    @if (isWalletCreated)
                    {
                        <div class="alert alert-success mt-4">
                            <div class="d-flex align-items-center">
                                <span class="me-2">🎉</span>
                                <div>
                                    <strong>Success!</strong> Wallet created successfully.
                                    <br>
                                    <small class="text-muted">Client ID: @walletId</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isWalletCreated = false;
    private string walletId = "";

    private void CreateWallet()
    {
        // Simulate wallet creation
        isWalletCreated = true;
        walletId = Guid.NewGuid().ToString("N")[..8].ToUpper();
    }
}
